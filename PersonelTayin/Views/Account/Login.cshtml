@using PersonelTayin.ViewsModels;
@model LoginViewModel;
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


@{
    ViewData["Title"] = "Giriş";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/account.css" rel="stylesheet" />



<div class="header">
    <a href="/" class="logo">Personel Tayin Sistemi</a>
    <nav class="navbar">
        <a href="/Account/Login">Personel Girişi</a>
        <a href="/Account/Admin">Yönetici Girişi</a>
    </nav>
</div>


<div class="account-container">
    <div class="account-box wrapper">
        <h1 class="text-center mb-4 white-text">Personel Girişi</h1>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-box">
                <input asp-for="Username" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="Password" placeholder="Şifre" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="remember-forgot">
                <label>
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
                <a asp-action="VerifyEmail">Şifremi Unuttum?</a>
            </div>

            <input type="submit" value="Giriş" />
           

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
